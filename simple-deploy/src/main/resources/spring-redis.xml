<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <!--redis集群配置-->
    <bean id="clusterJedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
        <property name="maxTotal" value="200"/>
        <property name="maxIdle" value="25"/>
        <property name="minIdle" value="5"/>
        <property name="maxWaitMillis" value="5000"/>
    </bean>


    <!--    <bean id="jedisPool" class="com.ncarzone.data.simple.center.biz.cache.JedisFactory">-->
    <!--        <property name="hosts" value="127.0.0.1" />-->
    <!--        <property name="connectionTimeout" value="100"/>-->
    <!--        <property name="soTimeout" value="500" />-->
    <!--        <property name="password" value="root"/>-->
    <!--        <property name="database" value="root"/>-->
    <!--        <property name="genericObjectPoolConfig" ref="clusterJedisPoolConfig" />-->
    <!--    </bean>-->

    <bean id="connectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
        <property name="hostName" value="localhost"/>
        <property name="port" value="6379"/>
        <property name="poolConfig" ref="clusterJedisPoolConfig"/>
    </bean>

    <!--使用字符串进行序列化-->
    <bean id="stringReadisSerializer" class="org.springframework.data.redis.serializer.StringRedisSerializer"/>
    <!--使用JDK的序列化器进行转化-->
    <bean id="jdkSerializationRedisSerializer" class="org.springframework.data.redis.serializer.JdkSerializationRedisSerializer"/>
    <!--配置Spring RedisTemplate-->
    <bean id="redisTemplate" class="org.springframework.data.redis.core.RedisTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="keySerializer" ref="stringReadisSerializer"/>
        <property name="valueSerializer" ref="stringReadisSerializer"/>
    </bean>
</beans>